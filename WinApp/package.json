{
  "name": "cinechan",
  "version": "2.0.0",
  "description": "CineChan is App for Cinemana Shabakaty to do (Discord Rich Presence, Video Dwonloader) .",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "justsaif.com",
  "devDependencies": {
    "electron": "^19.0.0",
    "electron-builder": "^23.0.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.0",
    "discord-rpc": "^4.0.1",
    "discord-rpc-electron": "^4.0.1",
    "electron-workers": "^1.10.3",
    "express": "^4.18.1",
    "node-downloader-helper": "^2.1.7"
  },
  "build": {
    "productName": "CineChan",
    "appId": "com.shabakaty.cinemanadrpbysaif",
    "win": {
      "icon": "assets/icons/logo.png",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true
    }
  }
}
